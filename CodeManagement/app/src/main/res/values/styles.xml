<!--        <item name="android:windowEnterAnimation">@anim/sb__bottom_in</item>-->
<!--        <item name="android:windowExitAnimation">@anim/sb__bottom_out</item>-->
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/sb__bottom_in</item>
        <item name="android:windowExitAnimation">@anim/sb__bottom_out</item>
    </style>

</resources>

